@model IEnumerable<TCC.ApplicationCore.Entity.Proprietario>

@{
    ViewData["Title"] = "Proprietarios";
}

<h1>Proprietarios</h1>

<p>
    <a asp-action="Create">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpfCnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CpfCnpj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProprietarioId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProprietarioId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.ProprietarioId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
